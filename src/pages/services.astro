              </div>
              <!-- Service Content End -->
            </div>
            <!-- Service Body End -->
          </div>
          <!-- Service Item End -->
        </div>

        <div class="col-lg-4 col-md-6">
          <!-- Service Item Start -->
          <div class="service-item wow fadeInUp" data-wow-delay="0.75s">
            <!-- Service Item Image Start -->
            <div class="service-item-image">
