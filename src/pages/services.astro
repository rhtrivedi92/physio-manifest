---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Page Header Start -->
  <div class="page-header service-page-header bg-radius-section parallaxie">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-12">
          <!-- Page Header Box Start -->
          <div class="page-header-box">
            <h1 class="text-anime-style-2" data-cursor="-opaque">Services</h1>
            <nav class="wow fadeInUp">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">home</a></li>
              </ol>
            </nav>
          </div>
          <!-- Page Header Box End -->
        </div>
      </div>
    </div>
  </div>
  <!-- Page Header End -->

  <!-- Service Process Section Start -->
  <div class="service-process bg-radius-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-4 col-md-6 order-lg-1 order-md-2 order-3">
          <!-- Service Process List Start -->
          <div class="service-process-list">
            <div class="service-process-list-item wow fadeInUp">
              <div class="icon-box">
                <img src="images/icon-service-list-dot.svg" alt="" />
              </div>
              <div class="service-process-content">
                <div class="service-process-content-body">
                  <div class="service-process-title">
                    <h3>Comprehensive Assessment</h3>
                  </div>
                  <div class="service-process-btn">
                    <a href="#"
                      ><img src="images/arrow-long-white.svg" alt="" /></a
                    >
                  </div>
                </div>

                <!-- <div class="service-process-footer">
                  <p>
                    We start by listening. We conduct a full evaluation to
                    understand your pain, lifestyle, and recovery goals.
                  </p>
                </div> -->
              </div>
            </div>
            <div
              class="service-process-list-item wow fadeInUp"
              data-wow-delay="0.25s"
            >
              <div class="icon-box">
                <img src="images/icon-service-list-dot.svg" alt="" />
              </div>
              <div class="service-process-content">
                <div class="service-process-content-body">
                  <div class="service-process-title">
                    <h3>Expert Treatment & Care</h3>
                  </div>
                  <div class="service-process-btn">
                    <a href="#"
                      ><img src="images/arrow-long-white.svg" alt="" /></a
                    >
                  </div>
                </div>

                <!-- <div class="service-process-footer">
                  <p>
                    We implement your unique plan, using a blend of advanced
                    manual therapy, corrective exercises, and modern techniques.
                  </p>
                </div> -->
              </div>
            </div>
            <div
              class="service-process-list-item wow fadeInUp"
              data-wow-delay="0.5s"
            >
              <div class="icon-box">
                <img src="images/icon-service-list-dot.svg" alt="" />
              </div>
              <div class="service-process-content">
                <div class="service-process-content-body">
                  <div class="service-process-title">
                    <h3>Lasting Results & Prevention</h3>
                  </div>
                  <div class="service-process-btn">
                    <a href="#"
                      ><img src="images/arrow-long-white.svg" alt="" /></a
                    >
                  </div>
                </div>

                <!-- <div class="service-process-footer">
                  <p>
                    Our goal is your long-term success. We give you the
                    knowledge and exercises to manage your health and prevent
                    future injuries.
                  </p>
                </div> -->
              </div>
            </div>
          </div>
          <!-- Service Process List End -->
        </div>

        <div class="col-lg-4 order-lg-2 order-md-3 order-2">
          <!-- Service Process Image Start -->
          <div class="service-process-img">
            <figure class="image-anime reveal">
              <img src="images/service-process-image.jpg" alt="" />
            </figure>
          </div>
          <!-- Service Process Image End -->
        </div>

        <div class="col-lg-4 col-md-6 order-lg-3 order-md-1 order-1">
          <!-- Service Process Box Content Start -->
          <div class="service-process-box-content">
            <!-- Section Title Start -->
            <div class="section-title">
              <h3 class="wow fadeInUp">Our Method</h3>
              <h2 class="text-anime-style-3" data-cursor="-opaque">
                A Plan for Real, Measurable Results
              </h2>
              <p class="wow fadeInUp" data-wow-delay="0.25s">
                We don't guess. Our method is a deliberate, structured approach.
                It begins with a deep analysis of your movement, leads to a
                specific treatment plan, and focuses on tracking your progress.
                This ensures your recovery is efficient and built to last.
              </p>
            </div>
            <!-- Section Title End -->

            <!-- Section Btn Start -->
            <div class="section-btn wow fadeInUp" data-wow-delay="0.5s">
              <a href="/contact" class="btn-default"
                ><span>make an appointment</span></a
              >
            </div>
            <!-- Section Btn End -->
          </div>
          <!-- Service Process Box Content End -->
        </div>
      </div>
    </div>
  </div>
  <!-- Service Process Section End -->

  <!-- Page Services Section Start -->
  <div class="page-services bg-radius-section">
    <div class="container">
      <div class="row section-row align-items-center">
        <div class="col-lg-12">
          <!-- Section Title Start -->
          <div class="section-title">
            <h3 class="wow fadeInUp">rehabilitation</h3>
            <h2 class="text-anime-style-3" data-cursor="-opaque">Services</h2>
          </div>
          <!-- Section Title End -->
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-md-6">
          <!-- Service Item Start -->
          <div class="service-item wow fadeInUp">
            <!-- Service Item Image Start -->
            <div class="service-item-image">
              <figure>
                <img src="images/service-img-1.jpg" alt="" />
              </figure>
            </div>
            <!-- Service Item Image End -->

            <!-- Service Body Start -->
            <div class="service-body">
              <!-- Service Content Start -->
              <div class="service-content">
                <h3>Orthopaedic Physiotherapy</h3>
              </div>
              <!-- Service Content End -->
            </div>
            <!-- Service Body End -->
          </div>
          <!-- Service Item End -->
        </div>

        <div class="col-lg-4 col-md-6">
          <!-- Service Item Start -->
